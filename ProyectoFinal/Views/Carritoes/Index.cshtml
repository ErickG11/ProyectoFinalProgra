@model IEnumerable<ProyectoFinal.Models.Carrito>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Agregar al carrito</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.IdCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.IdProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCarrito">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdCarrito">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCarrito">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
